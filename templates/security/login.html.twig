{% extends 'base.html.twig' %}



{% block title %}Se connecter{% endblock %}

{% block body %}
    <br>
    <br>
    <div class="container text-center">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Bonjour {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se d√©connecter</a>
        </div>
    {% endif %}


    <br>
    <br>
<center>
<div class="col-md-6">
        <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
        <br>
            <label for="inputLogin">Login</label>
        <br>
            <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" required autofocus>
        <br>
        <br>
            <label for="inputPassword">Password</label>
        <br>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
        <br>
        <br>
            <button class="btn btn-danger" type="submit">Connection</button>
            <center>
    </div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

</form>
{% endblock %}
